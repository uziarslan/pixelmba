
<style>
  /* Styles for success alert */
.alert-success {
  background-color: #d4edda;
  border-color: #c3e6cb;
  color: #155724;
  padding: 10px;
  text-align: center;
  margin-top: 6px;
}

/* Styles for error alert */
.alert-danger {
  background-color: #f8d7da;
  border-color: #f5c6cb;
  color: #721c24;
  padding: 10px;
  text-align: center;
  margin-top: 6px;
}

/* Position close button */
.alert-dismissible .btn {
  background-color: transparent;
  border: none;
  padding: 0.25rem 0.5rem;
  margin: -0.25rem -0.5rem;
  cursor: pointer;
}

/* Adjust the position of the close button */
.alert-dismissible .btn i {
  font-size: 1rem;
  transition: transform 0.2s ease-in-out;
}

/* Change close button color on hover */
.alert-dismissible .btn:hover i {
  color: #000;
  transform: scale(1.2);
}
</style>
<% if(success && success.length){ %>
    <div class="text-center alert alert-success alert-dismissible fade show " style="width: 100% !important;" role="alert">
      <%= success %>
      <button type="button" style="float: right;" class="btn btn-sm text-dark p-0"><i class="fas fa-times " data-bs-dismiss="alert"></i></button> 
   
    </div>
    <% } %>
    <% if(error && error.length){ %>
    <div class="text-center alert alert-danger alert-dismissible fade show " style="width: 100% !important;" role="alert">
      <%= error %>
      <button type="button" style="float: right;" class="btn btn-sm text-dark p-0"><i class="fas fa-times " data-bs-dismiss="alert"></i></button> 

    
    </div>
    <% } %>