<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/vendors/mdi/css/materialdesignicons.min.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <div class="container-scroller">
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
      <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
        <a class="sidebar-brand brand-logo" href="index.html"><img src="/images/pixel_mba_logo.png" alt="logo" /></a>
        <a class="sidebar-brand brand-logo-mini pl-4 pt-3" href="index.html"><img src="/images/pixel_mba_logo.png" alt="logo" /></a>
      </div>
      <ul class="nav">

        <li class="nav-item mt-2">
          <a class="nav-link" href="/userslist">
            <i class="mdi mdi-account-multiple menu-icon"></i>
            <span class="menu-title">Users</span>
          </a>
        </li>
        <li class="nav-item mt-2">
          <a class="nav-link" href="/pixellist">
            <i class="mdi mdi-apps menu-icon"></i>
            <span class="menu-title">Pixel</span>
          </a>
        </li>
        
        <li class="nav-item sidebar-actions">
          <div class="nav-link">
            <div class="mt-4">
             
              <ul class="mt-4 pl-0">
                <li>Sign Out</li>
              </ul>
            </div>
          </div>
        </li>
      </ul>
    </nav>
    <div class="container-fluid page-body-wrapper">


      <div class="main-panel">
        <div class="content-wrapper pb-0">
          <div class="page-header flex-wrap">
            <h3 class="mb-0"> Hi, Welcome Back! <span class="pl-0 h6 pl-sm-2 text-muted d-inline-block">Admin</span>
            </h3>

          </div>
          <div class="row">
            <div class="col-lg-12 grid-margin">
              <div class="row">
                <% if (pixelData.length === 0) { %>
                  <p>No pixel data found.</p>
                <% } else { %>
                  <% pixelData.forEach(pixel => { %>
                <div class="col-4">
                
                  <div class="card mb-4" style="background-color: #ffffff; border: #ffffff; border-radius: 10px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <% if (pixel.image) { %>
                      <img src="<%= pixel.image %>" style="height: 200px; object-fit: cover; border-radius: 10px;" alt=" No Image available">
                    <% } else { %>
                      <div style="width: 100%; height: 200px; background-color: <%= pixel.pixelColor %>; border-radius: 10px; border: 1px solid #00000037">
                      </div>
                    <% } %>
                    <div class="card-body px-3 py-2">
                      <div class="d-flex justify-content-between align-items-start">
                      </div>
                      
                      <p class="mb-1">Pixel Index: <%= pixel.pixelIndex %></p>
                      <p class="mb-1">Pixel Color: <%= pixel.pixelColor %></p>
                      <h5 class=" mb-1">Buyer</h6>
                          <p class="mb-1"><%= pixel.buyer.email %></p>
                      <h5 class=" mb-1">Pixel Url</h6>
                      <p class="mb-0"> <%= pixel.pixelUrl %></p>
                    </div>
                    
          <form action="/deletePixel/<%= pixel._id %>"  class="d-flex justify-content-center" method="post">
                      <button type="submit" class="btn btn-danger mx-auto w-100" style="border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">Delete Pixel</button>
          </form>

                  </div>
                </div>
                <% }); %>
                <% } %>
          
             
              </div>
            </div>
           

          </div>

        </div>
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© PixelMBA</span>
          </div>
        </footer>
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  
  <!-- End custom js for this page -->
</body>

</html>