<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/pixelBuyer.css"> <!-- Add your CSS file link here -->
  
  <style>
    /* Styles for the popup */
    .popup {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      background-color: white;
      border: 1px solid #ccc;
      z-index: 1000;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /* Styles for overlay */
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }
  </style>
  <title>Pixel Buyer</title>
</head>

<body>
  <!-- Trigger button to open the popup -->
  <button onclick="openPopup()">Open Pixel Buyer Form</button>

  <!-- Popup container -->
  <div class="overlay" id="overlay"></div>
  <div class="popup" id="popup">
    <h2>Pixel Buyer Form</h2>

    <!-- Pixel Buyer Form -->
    <form action="/submit_pixel" method="post" enctype="multipart/form-data">
      <!-- Pixel URL Input -->
      <label for="pixelUrl">Pixel URL:</label>
      <input type="url" id="pixelUrl" name="pixelUrl" required>

      <!-- Pixel Image Upload -->
      <label for="pixelImage">Pixel Image:</label>
      <input type="file" id="pixelImage" name="pixelImage" accept="image/*" required>

      <!-- Color Selection -->
      <label for="pixelColor">Choose a Color:</label>
      <input type="color" id="pixelColor" name="pixelColor" value="#ff0000" required>

      <!-- Submit Button -->
      <button type="submit">Submit for Approval</button>
    </form>
  </div>

  <script>
    function openPopup() {
      document.getElementById('popup').style.display = 'block';
      document.getElementById('overlay').style.display = 'block';
    }

    function closePopup() {
      document.getElementById('popup').style.display = 'none';
      document.getElementById('overlay').style.display = 'none';
    }
  </script>
</body>

</html>
